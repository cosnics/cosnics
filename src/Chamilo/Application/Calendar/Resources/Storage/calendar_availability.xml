<?xml version="1.0" encoding="UTF-8"?>
<object name="calendar_availability">
    <properties>
        <property name="id"
                  type="integer"
                  unsigned="1"
                  notnull="1"
                  autoincrement="true"/>
        <property name="user_id"
                  type="integer"
                  unsigned="1"
                  notnull="1"/>
        <property name="calendar_type"
                  type="string"
                  length="255"
                  notnull="1"/>
        <property name="calendar_id"
                  type="string"
                  length="255"
                  notnull="1"/>
        <property name="availability"
                  type="integer"
                  notnull="1"
                  default="1"/>
        <property name="colour"
                  type="string"
                  length="10"/>
    </properties>
    <indexes>
        <index name="idx_user_id">
            <property name="user_id"/>
        </index>
        <index name="idx_calendar_type">
            <property name="calendar_type"/>
        </index>
        <index name="idx_calendar_id">
            <property name="calendar_id"/>
        </index>
        <index name="idx_availability">
            <property name="availability"/>
        </index>
        <index name="unq_entry"
               type="unique">
            <property name="user_id"/>
            <property name="calendar_type"/>
            <property name="calendar_id"/>
        </index>
    </indexes>
</object>