            margin-bottom: 40px;
            padding: 20px;
        }
        .exam-code {
            margin-top: 8px;
        }
        .exam-code::placeholder {
            color: #999;
        }
        .footer {
            background: #fff;
            border-top: 1px solid #ccc;
            margin-top: auto;
            width: 100%;
        }
        .privacy-policy {
            padding: 10px 0;
