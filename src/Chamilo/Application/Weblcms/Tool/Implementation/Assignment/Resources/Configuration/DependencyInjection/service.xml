<?xml version="1.0" encoding="UTF-8" ?>
<container
        xmlns="http://symfony.com/schema/dic/services"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <service
                id="chamilo.application.weblcms.tool.implementation.assignment.service.assignment_data_provider"
                class="Chamilo\Application\Weblcms\Tool\Implementation\Assignment\Service\AssignmentDataProvider">
            <argument type="service" id="chamilo.application.weblcms.integration.chamilo.core.tracking.service.assignment_service" />
            <argument type="service" id="chamilo.application.weblcms.tool.implementation.assignment.service.entity.entity_service_manager" />
        </service>

        <service
                id="chamilo.application.weblcms.tool.implementation.assignment.service.entity.user_entity_service"
                class="Chamilo\Application\Weblcms\Tool\Implementation\Assignment\Service\Entity\UserEntityService">
            <argument type="service" id="chamilo.application.weblcms.integration.chamilo.core.tracking.service.assignment_service" />
            <argument type="service" id="symfony.component.translation.translator" />
        </service>

        <service
                id="chamilo.application.weblcms.tool.implementation.assignment.service.entity.course_group_entity_service"
                class="Chamilo\Application\Weblcms\Tool\Implementation\Assignment\Service\Entity\CourseGroupEntityService">
            <argument type="service" id="chamilo.application.weblcms.integration.chamilo.core.tracking.service.assignment_service" />
            <argument type="service" id="symfony.component.translation.translator" />
            <argument type="service" id="chamilo.core.user.service.user_service" />
        </service>

        <service
                id="chamilo.application.weblcms.tool.implementation.assignment.service.entity.platform_group_entity_service"
                class="Chamilo\Application\Weblcms\Tool\Implementation\Assignment\Service\Entity\PlatformGroupEntityService">
            <argument type="service" id="chamilo.application.weblcms.integration.chamilo.core.tracking.service.assignment_service" />
            <argument type="service" id="symfony.component.translation.translator" />
            <argument type="service" id="chamilo.core.user.service.user_service" />
        </service>

        <service
            id="chamilo.application.weblcms.tool.implementation.assignment.service.entity.entity_service_manager"
            class="Chamilo\Application\Weblcms\Tool\Implementation\Assignment\Service\Entity\EntityServiceManager">
            <call method="addEntityService">
                <argument type="constant">\Chamilo\Application\Weblcms\Integration\Chamilo\Core\Tracking\Storage\DataClass\Assignment\Entry::ENTITY_TYPE_USER</argument>
                <argument type="service" id="chamilo.application.weblcms.tool.implementation.assignment.service.entity.user_entity_service" />
            </call>
            <call method="addEntityService">
                <argument type="constant">\Chamilo\Application\Weblcms\Integration\Chamilo\Core\Tracking\Storage\DataClass\Assignment\Entry::ENTITY_TYPE_COURSE_GROUP</argument>
                <argument type="service" id="chamilo.application.weblcms.tool.implementation.assignment.service.entity.course_group_entity_service" />
            </call>
            <call method="addEntityService">
                <argument type="constant">\Chamilo\Application\Weblcms\Integration\Chamilo\Core\Tracking\Storage\DataClass\Assignment\Entry::ENTITY_TYPE_PLATFORM_GROUP</argument>
                <argument type="service" id="chamilo.application.weblcms.tool.implementation.assignment.service.entity.platform_group_entity_service" />
            </call>
        </service>

        <service
                id="chamilo.application.weblcms.tool.implementation.assignment.service.entries_downloader.entries_downloader_factory"
                class="Chamilo\Application\Weblcms\Tool\Implementation\Assignment\Service\EntriesDownloader\EntriesDownloaderFactory">
            <argument type="service" id="symfony.component.translation.translator" />
            <argument type="service" id="chamilo.application.weblcms.storage.repository.publication_repository" />
            <argument type="service" id="chamilo.application.weblcms.tool.implementation.assignment.storage.repository.publication_repository" />
            <argument type="service" id="chamilo.application.weblcms.tool.implementation.assignment.service.entity.entity_service_manager" />
            <argument type="service" id="chamilo.application.weblcms.integration.chamilo.core.tracking.service.assignment_service" />
            <argument type="service" id="chamilo.libraries.file.compression.archive_creator.archive_creator" />
        </service>

        <service
                id="chamilo.application.weblcms.tool.implementation.assignment.service.assignment_publication_service"
                class="Chamilo\Application\Weblcms\Tool\Implementation\Assignment\Service\AssignmentPublicationService">
            <argument type="service" id="chamilo.application.weblcms.tool.implementation.assignment.storage.repository.publication_repository" />
            <argument type="service" id="chamilo.application.weblcms.integration.chamilo.core.tracking.service.assignment_service" />
        </service>

        <service id="Chamilo\Application\Weblcms\Tool\Implementation\Assignment\Service\EntryNotificationProcessor"
                 class="Chamilo\Application\Weblcms\Tool\Implementation\Assignment\Service\EntryNotificationProcessor">
            <argument type="service" id="chamilo.application.weblcms.integration.chamilo.core.tracking.service.assignment_service" />
            <argument type="service" id="chamilo.application.weblcms.tool.implementation.assignment.service.entity.entity_service_manager" />
            <argument type="service" id="chamilo.application.weblcms.service.publication" />
            <argument type="service" id="chamilo.application.weblcms.service.course" />
            <argument type="service" id="chamilo.core.user.service.user_service" />
            <argument type="service" id="chamilo.core.repository.workspace.repository.content_object_repository" />
            <argument type="service" id="Chamilo\Core\Notification\Service\FilterManager" />
            <argument type="service" id="Chamilo\Core\Notification\Service\NotificationManager" />
        </service>

    </services>
</container>