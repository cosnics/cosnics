<?xml version="1.0" encoding="utf-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autowire="true"
                  autoconfigure="true"
                  public="true"/>

        <service id="Chamilo\Application\Weblcms\Integration\Chamilo\Core\Tracking\Service\AssignmentService">
            <argument type="service"
                      id="Chamilo\Application\Weblcms\Integration\Chamilo\Core\Tracking\Storage\Repository\AssignmentRepository"/>
            <argument type="service"
                      id="Chamilo\Application\Weblcms\Integration\Chamilo\Core\Tracking\Storage\Repository\AssignmentEphorusRepository"/>
        </service>

        <service id="Chamilo\Application\Weblcms\Integration\Chamilo\Core\Tracking\Service\LearningPathAssignmentService">
            <argument type="service"
                      id="Chamilo\Application\Weblcms\Integration\Chamilo\Core\Tracking\Storage\Repository\LearningPathAssignmentRepository"/>
            <argument type="service"
                      id="Chamilo\Application\Weblcms\Integration\Chamilo\Core\Tracking\Storage\Repository\LearningPathAssignmentEphorusRepository"/>
            <argument type="service"
                      id="Chamilo\Core\Queue\Service\JobProducer"/>
        </service>

        <service id="Chamilo\Application\Weblcms\Integration\Chamilo\Core\Tracking\Storage\Repository\AssignmentRepository">
            <argument type="service"
                      id="Chamilo\Libraries\Storage\DataManager\Doctrine\DataClassRepository"/>
        </service>

        <service id="Chamilo\Application\Weblcms\Integration\Chamilo\Core\Tracking\Storage\Repository\AssignmentEphorusRepository">
            <argument type="service"
                      id="Chamilo\Libraries\Storage\DataManager\Doctrine\DataClassRepository"/>
        </service>

        <service id="Chamilo\Application\Weblcms\Integration\Chamilo\Core\Tracking\Storage\Repository\LearningPathAssignmentRepository">
            <argument type="service"
                      id="Chamilo\Libraries\Storage\DataManager\Doctrine\DataClassRepository"/>
        </service>

        <service id="Chamilo\Application\Weblcms\Integration\Chamilo\Core\Tracking\Storage\Repository\LearningPathAssignmentEphorusRepository">
            <argument type="service"
                      id="Chamilo\Libraries\Storage\DataManager\Doctrine\DataClassRepository"/>
        </service>
    </services>
</container>