<?xml version="1.0" encoding="UTF-8"?>
<block name="FilteredCourseList">
	<settings>
		<category name="filters">
			<setting name="course_type" field="select" default="0">
				<options type="dynamic" source="get_course_types" />
			</setting>
			<setting name="show_new_icons" field="radio" default="1">
				<options type="static">
					<option name="true" value="1" />
					<option name="false" value="0" />
				</options>
			</setting>
		</category>
		
	</settings>
</block>
