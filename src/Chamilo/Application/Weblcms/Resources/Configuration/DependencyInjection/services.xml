<?xml version="1.0" encoding="utf-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autowire="true"
                  autoconfigure="true"
                  public="true"/>

        <service id="Chamilo\Application\Weblcms\Service\CourseService">
            <argument key="$courseRepository"
                      type="service"
                      id="Chamilo\Application\Weblcms\Storage\Repository\CourseRepository"/>
            <argument key="$courseSettingsService"
                      type="service"
                      id="Chamilo\Application\Weblcms\Service\CourseSettingsService"/>
            <call method="setRightsService">
                <argument type="service"
                          id="Chamilo\Application\Weblcms\Service\RightsService"/>
            </call>
        </service>

        <service id="Chamilo\Application\Weblcms\Service\CourseSettingsService"/>

        <service id="Chamilo\Application\Weblcms\Service\PublicationService">
            <argument type="service"
                      id="Chamilo\Application\Weblcms\Storage\Repository\PublicationRepository"/>
            <call method="setRightsService">
                <argument type="service"
                          id="Chamilo\Application\Weblcms\Service\RightsService"/>
            </call>
            <call method="setCourseService">
                <argument type="service"
                          id="Chamilo\Application\Weblcms\Service\CourseService"/>
            </call>
        </service>

        <service id="Chamilo\Application\Weblcms\Tool\Service\CategoryBreadcrumbsGenerator"/>

        <service id="Chamilo\Application\Weblcms\Service\RightsService">
            <argument key="$courseSettingsService"
                      type="service"
                      id="Chamilo\Application\Weblcms\Service\CourseSettingsService"/>
            <call method="setCourseService">
                <argument type="service"
                          id="Chamilo\Application\Weblcms\Service\CourseService"/>
            </call>
            <call method="setPublicationService">
                <argument type="service"
                          id="Chamilo\Application\Weblcms\Service\PublicationService"/>
            </call>
        </service>

        <service id="Chamilo\Application\Weblcms\CourseSettingsController"/>
        <service id="Chamilo\Application\Weblcms\Rights\WeblcmsRights"/>
        <service id="Chamilo\Application\Weblcms\Storage\Repository\CourseRepository"/>
        <service id="Chamilo\Application\Weblcms\Storage\Repository\PublicationRepository"/>
        <service id="Chamilo\Application\Weblcms\Storage\Repository\RightsLocationRepository"/>
        <service id="Chamilo\Application\Weblcms\Service\RightsLocationFixer\RightsLocationFixer"/>

        <service id="Chamilo\Application\Weblcms\Console\Command\RightsLocationFixerCommand">
            <tag name="chamilo.libraries.console.command"/>
        </service>

        <service id="Chamilo\Application\Weblcms\Service\CourseUserCategoryService"/>
        <service id="Chamilo\Application\Weblcms\Storage\Repository\CourseUserCategoryRepository"/>

        <service id="Chamilo\Application\Weblcms\Service\GroupEventListener">
            <tag name="Chamilo\Core\Group\Service\GroupEventListenerInterface"/>
        </service>

    </services>
</container>