<?xml version="1.0" encoding="UTF-8"?>
<object name="weblcms_course_request">
    <properties>
        <property name="id"
                  type="integer"
                  notnull="1"
                  autoincrement="true"/>
        <property name="course_id"
                  type="integer"
                  notnull="1"/>
        <property name="user_id"
                  type="integer"
                  notnull="1"/>
        <property name="subject"
                  type="text"
                  length="50"/>
        <property name="motivation"
                  type="text"/>
        <property name="creation_date"
                  type="integer"
                  unsigned="1"
                  notnull="1"/>
        <property name="decision_date"
                  type="integer"
                  unsigned="1"/>
        <property name="decision"
                  type="integer"
                  length="1"/>
    </properties>
    <indexes>
        <index name="idx_course_id">
            <property name="course_id"/>
        </index>
    </indexes>
</object>
