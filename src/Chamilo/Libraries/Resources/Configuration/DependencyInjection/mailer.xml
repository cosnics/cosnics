<?xml version="1.0" encoding="UTF-8" ?>
<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true" autoconfigure="true" autowire="true" />
        <service
            id="Chamilo\Libraries\Mail\Mailer\MailerFactory" class="Chamilo\Libraries\Mail\Mailer\MailerFactory" />
        <service id="Chamilo\Libraries\Mail\Mailer\MailerInterface"
                 class="Chamilo\Libraries\Mail\Mailer\MailerInterface">
            <factory service="Chamilo\Libraries\Mail\Mailer\MailerFactory" method="getActiveMailer" />
        </service>

        <service id="Chamilo\Libraries\Mail\Mailer\MailerRegistrar" />
        <service id="Chamilo\Libraries\Mail\Mailer\Platform\Mailer" autowire="false">
            <tag name="Chamilo\Libraries\Mail\Mailer\MailerInterface" />
        </service>
        <service id="Chamilo\Libraries\Mail\Mailer\PhpMailer\Mailer" autowire="false">
            <tag name="Chamilo\Libraries\Mail\Mailer\MailerInterface" />
        </service>

    </services>
</container>