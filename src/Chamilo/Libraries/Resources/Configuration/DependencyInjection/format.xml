<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://symfony.com/schema/dic/services"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autowire="true"
                  autoconfigure="true"
                  public="true"/>

        <service id="Chamilo\Libraries\Format\Theme\ThemeSystemPathBuilder"
                 class="Chamilo\Libraries\Format\Theme\ThemePathBuilder">
            <argument key="$pathBuilder"
                      type="service"
                      id="Chamilo\Libraries\File\SystemPathBuilder"/>
            <argument key="$theme">%chamilo.configuration.general.theme%</argument>
        </service>

        <service id="Chamilo\Libraries\Format\Theme\ThemeWebPathBuilder"
                 class="Chamilo\Libraries\Format\Theme\ThemePathBuilder">
            <argument key="$pathBuilder"
                      type="service"
                      id="Chamilo\Libraries\File\WebPathBuilder"/>
            <argument key="$theme">%chamilo.configuration.general.theme%</argument>
        </service>

        <service id="Chamilo\Libraries\Format\Utilities\ResourceManager"/>
        <service id="Chamilo\Libraries\Format\Utilities\ResourceProcessor"/>
        <service id="Chamilo\Libraries\Format\Utilities\PackageDescriber"/>

        <service id="Chamilo\Libraries\Format\NotificationMessage\NotificationMessageManager"/>
        <service id="Chamilo\Libraries\Format\NotificationMessage\NotificationMessageRenderer"/>
        <service id="Chamilo\Libraries\Format\NotificationMessage\NotificationMessageSessionStorage"/>
        <service id="Chamilo\Libraries\Format\NotificationMessage\NotificationMessageStorageInterface"
                 alias="Chamilo\Libraries\Format\NotificationMessage\NotificationMessageSessionStorage"/>

        <service id="Chamilo\Libraries\Format\Slideshow\SlideshowRenderer"/>

        <service id="Chamilo\Libraries\Format\Table\ArrayCollectionTableRenderer"/>
        <service id="Chamilo\Libraries\Format\Table\PropertiesTableRenderer"/>
        <service id="Chamilo\Libraries\Format\Table\SimpleTableRenderer"/>
        <service id="Chamilo\Libraries\Format\Table\ListTableRenderer"/>
        <service id="Chamilo\Libraries\Format\Table\ListHtmlTableRenderer"/>
        <service id="Chamilo\Libraries\Format\Table\GalleryTableRenderer"/>
        <service id="Chamilo\Libraries\Format\Table\GalleryHtmlTableRenderer"/>
        <service id="Chamilo\Libraries\Format\Table\Pager"/>
        <service id="Chamilo\Libraries\Format\Table\PagerRenderer"/>
        <service id="Chamilo\Libraries\Format\Table\RequestTableParameterValuesCompiler"/>
        <service id="Chamilo\Libraries\Format\Table\Column\DataClassPropertyTableColumnFactory"/>

        <service id="Chamilo\Libraries\Format\Tabs\Form\FormTabGenerator"/>
        <service id="Chamilo\Libraries\Format\Tabs\Form\FormTabsGenerator"/>
        <service id="Chamilo\Libraries\Format\Tabs\Link\LinkTabRenderer"/>
        <service id="Chamilo\Libraries\Format\Tabs\Link\LinkTabsRenderer"/>
        <service id="Chamilo\Libraries\Format\Tabs\ActionRenderer"/>
        <service id="Chamilo\Libraries\Format\Tabs\ActionsTabRenderer"/>
        <service id="Chamilo\Libraries\Format\Tabs\ContentTabRenderer"/>
        <service id="Chamilo\Libraries\Format\Tabs\GenericTabRenderer"/>
        <service id="Chamilo\Libraries\Format\Tabs\GenericTabsRenderer"/>
        <service id="Chamilo\Libraries\Format\Tabs\TabRenderer"/>
        <service id="Chamilo\Libraries\Format\Tabs\TabsRenderer"/>

        <service id="Chamilo\Libraries\Format\Structure\BreadcrumbTrailRenderer"/>
        <service id="Chamilo\Libraries\Format\Structure\BannerRenderer"/>
        <service id="Chamilo\Libraries\Format\Structure\PageConfiguration"/>
        <service id="Chamilo\Libraries\Format\Structure\FooterRenderer"/>

        <service id="Chamilo\Libraries\Format\Structure\HeaderRenderer">
            <argument key="$themeWebPathBuilder"
                      type="service"
                      id="Chamilo\Libraries\Format\Theme\ThemeWebPathBuilder"/>
        </service>

        <service id="Chamilo\Libraries\Format\Structure\PanelRenderer"/>
    </services>
</container>