<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://symfony.com/schema/dic/services"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autowire="true"
                  autoconfigure="true"
                  public="true"/>

        <!-- Connection -->
        <service id="Chamilo\Libraries\Storage\DataManager\Doctrine\DataSourceName">
            <argument>%chamilo.configuration.database%</argument>
        </service>

        <service id="Chamilo\Libraries\Storage\DataManager\Doctrine\Factory\ConnectionFactory"/>

        <service id="Doctrine\DBAL\Connection">
            <factory service="Chamilo\Libraries\Storage\DataManager\Doctrine\Factory\ConnectionFactory"
                     method="getConnection"/>
        </service>

        <!-- Database Layer -->
        <service id="Chamilo\Libraries\Storage\DataManager\Doctrine\Database\DataClassDatabase"/>
        <service id="Chamilo\Libraries\Storage\DataManager\Doctrine\Database\StorageUnitDatabase"/>

        <!-- Repositories -->
        <service id="Chamilo\Libraries\Storage\DataManager\Doctrine\DataClassRepository"
                 class="Chamilo\Libraries\Storage\DataManager\Repository\DataClassRepository">
            <argument key="$dataClassDatabase"
                      type="service"
                      id="Chamilo\Libraries\Storage\DataManager\Doctrine\Database\DataClassDatabase"/>
            <argument key="$queryCacheEnabled">%chamilo.configuration.debug.enable_query_cache%</argument>
        </service>

        <service id="Chamilo\Libraries\Storage\DataManager\Doctrine\NestedSetDataClassRepository"
                 class="Chamilo\Libraries\Storage\DataManager\Repository\NestedSetDataClassRepository">
            <argument key="$dataClassDatabase"
                      type="service"
                      id="Chamilo\Libraries\Storage\DataManager\Doctrine\Database\DataClassDatabase"/>
            <argument key="$queryCacheEnabled">%chamilo.configuration.debug.enable_query_cache%</argument>
        </service>

        <service id="Chamilo\Libraries\Storage\DataManager\Doctrine\Repository\StorageUnitRepository">
            <argument type="service"
                      id="Chamilo\Libraries\Storage\DataManager\Doctrine\Database\StorageUnitDatabase"/>
        </service>

        <service id="Chamilo\Libraries\Storage\DataManager\Repository\DataClassRepository"
                 alias="Chamilo\Libraries\Storage\DataManager\Doctrine\DataClassRepository"/>

        <service id="Chamilo\Libraries\Storage\DataManager\Repository\NestedSetDataClassRepository"
                 alias="Chamilo\Libraries\Storage\DataManager\Doctrine\NestedSetDataClassRepository"/>

        <service id="Chamilo\Libraries\Storage\DataManager\Repository\StorageUnitRepository"
                 alias="Chamilo\Libraries\Storage\DataManager\Doctrine\Repository\StorageUnitRepository"/>

        <!-- Utilities -->

        <service id="Chamilo\Libraries\Storage\DataManager\Doctrine\Factory\ConditionPartTranslatorFactory"/>
        <service id="Chamilo\Libraries\Storage\DataManager\Doctrine\Processor\RecordProcessor"/>
        <service id="Chamilo\Libraries\Storage\DataManager\Doctrine\Service\ParametersProcessor"/>

        <service id="Chamilo\Libraries\Storage\DataManager\Doctrine\Service\ConditionPartTranslatorService">
            <argument key="$queryCacheEnabled">%chamilo.configuration.debug.enable_query_cache%</argument>
        </service>

    </services>
</container>