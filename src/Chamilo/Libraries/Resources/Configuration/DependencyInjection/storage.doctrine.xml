<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://symfony.com/schema/dic/services"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autowire="true"
                  autoconfigure="true"
                  public="true"/>

        <!-- Connection -->
        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\DataSourceName">
            <argument>%chamilo.configuration.database%</argument>
        </service>

        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConnectionFactory"/>

        <service id="Doctrine\DBAL\Connection">
            <factory service="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConnectionFactory"
                     method="getConnection"/>
        </service>

        <service id="Doctrine\DBAL\Connection\Session">
            <factory service="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConnectionFactory"
                     method="getConnection"/>
        </service>

        <!-- Database Layer -->
        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\Database\DataClassDatabase"/>
        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\Database\StorageUnitDatabase"/>

        <!-- Repositories -->
        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\Repository\DataClassRepository"
                 class="Chamilo\Libraries\Storage\Repository\DataClassRepository">
            <argument key="$dataClassDatabase"
                      type="service"
                      id="Chamilo\Libraries\Storage\Implementations\Doctrine\Database\DataClassDatabase"/>
            <argument key="$queryCacheEnabled">%chamilo.configuration.debug.enable_query_cache%</argument>
        </service>

        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\Repository\NestedSetDataClassRepository"
                 class="Chamilo\Libraries\Storage\Repository\NestedSetDataClassRepository">
            <argument key="$dataClassRepository"
                      type="service"
                      id="Chamilo\Libraries\Storage\Implementations\Doctrine\Repository\DataClassRepository"/>
        </service>

        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\Repository\StorageUnitRepository"
                 class="Chamilo\Libraries\Storage\Repository\StorageUnitRepository">
            <argument key="$storageUnitDatabase"
                      type="service"
                      id="Chamilo\Libraries\Storage\Implementations\Doctrine\Database\StorageUnitDatabase"/>
        </service>

        <service id="Chamilo\Libraries\Storage\Repository\DataClassRepository"
                 alias="Chamilo\Libraries\Storage\Implementations\Doctrine\Repository\DataClassRepository"/>

        <service id="Chamilo\Libraries\Storage\Repository\NestedSetDataClassRepository"
                 alias="Chamilo\Libraries\Storage\Implementations\Doctrine\Repository\NestedSetDataClassRepository"/>

        <service id="Chamilo\Libraries\Storage\Repository\StorageUnitRepository"
                 alias="Chamilo\Libraries\Storage\Implementations\Doctrine\Repository\StorageUnitRepository"/>

        <!-- Utilities -->
        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\QueryBuilderConfigurator"/>

        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConditionPartTranslatorService">
            <argument key="$queryCacheEnabled">%chamilo.configuration.debug.enable_query_cache%</argument>
        </service>

        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\Query\Variable\CaseConditionVariableTranslator">
            <tag name="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConditionPartTranslatorService"/>
        </service>
        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\Query\Variable\CaseElementConditionVariableTranslator">
            <tag name="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConditionPartTranslatorService"/>
        </service>
        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\Query\Variable\DateFormatConditionVariableTranslator">
            <tag name="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConditionPartTranslatorService"/>
        </service>
        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\Query\Variable\DistinctConditionVariableTranslator">
            <tag name="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConditionPartTranslatorService"/>
        </service>
        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\Query\Variable\FunctionConditionVariableTranslator">
            <tag name="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConditionPartTranslatorService"/>
        </service>
        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\Query\Variable\OperationConditionVariableTranslator">
            <tag name="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConditionPartTranslatorService"/>
        </service>
        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\Query\Variable\PropertiesConditionVariableTranslator">
            <tag name="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConditionPartTranslatorService"/>
        </service>
        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\Query\Variable\PropertyConditionVariableTranslator">
            <tag name="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConditionPartTranslatorService"/>
        </service>
        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\Query\Variable\StaticConditionVariableTranslator">
            <tag name="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConditionPartTranslatorService"/>
        </service>

        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\Query\Condition\ComparisonConditionTranslator">
            <tag name="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConditionPartTranslatorService"/>
        </service>
        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\Query\Condition\EqualityConditionTranslator">
            <tag name="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConditionPartTranslatorService"/>
        </service>
        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\Query\Condition\InConditionTranslator">
            <tag name="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConditionPartTranslatorService"/>
        </service>
        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\Query\Condition\AndConditionTranslator">
            <tag name="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConditionPartTranslatorService"/>
        </service>
        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\Query\Condition\OrConditionTranslator">
            <tag name="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConditionPartTranslatorService"/>
        </service>
        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\Query\Condition\NotConditionTranslator">
            <tag name="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConditionPartTranslatorService"/>
        </service>
        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\Query\Condition\PatternMatchConditionTranslator">
            <tag name="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConditionPartTranslatorService"/>
        </service>
        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\Query\Condition\RegularExpressionConditionTranslator">
            <tag name="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConditionPartTranslatorService"/>
        </service>
        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\Query\Condition\SubselectConditionTranslator">
            <tag name="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConditionPartTranslatorService"/>
        </service>

        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\Query\Condition\ContainsConditionTranslator">
            <tag name="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConditionPartTranslatorService"/>
        </service>
        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\Query\Condition\StartsWithConditionTranslator">
            <tag name="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConditionPartTranslatorService"/>
        </service>
        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\Query\Condition\EndsWithConditionTranslator">
            <tag name="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConditionPartTranslatorService"/>
        </service>
    </services>
</container>