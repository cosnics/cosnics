<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://symfony.com/schema/dic/services"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autowire="true"
                  autoconfigure="true"
                  public="true"/>

        <!-- Connection -->
        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\DataSourceName">
            <argument>%chamilo.configuration.database%</argument>
        </service>

        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConnectionFactory"/>

        <service id="Doctrine\DBAL\Connection">
            <factory service="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConnectionFactory"
                     method="getConnection"/>
        </service>

        <service id="Doctrine\DBAL\Connection\Session">
            <factory service="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConnectionFactory"
                     method="getConnection"/>
        </service>

        <!-- Database Layer -->
        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\Database\DataClassDatabase"/>
        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\Database\StorageUnitDatabase"/>

        <!-- Repositories -->
        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\DataClassRepository"
                 class="Chamilo\Libraries\Storage\Repository\DataClassRepository">
            <argument key="$dataClassDatabase"
                      type="service"
                      id="Chamilo\Libraries\Storage\Implementations\Doctrine\Database\DataClassDatabase"/>
            <argument key="$queryCacheEnabled">%chamilo.configuration.debug.enable_query_cache%</argument>
        </service>

        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\NestedSetDataClassRepository"
                 class="Chamilo\Libraries\Storage\Repository\NestedSetDataClassRepository">
            <argument key="$dataClassRepository"
                      type="service"
                      id="Chamilo\Libraries\Storage\Implementations\Doctrine\DataClassRepository"/>
        </service>

        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\Repository\StorageUnitRepository"
                 class="Chamilo\Libraries\Storage\Repository\StorageUnitRepository">
            <argument key="$storageUnitDatabase"
                      type="service"
                      id="Chamilo\Libraries\Storage\Implementations\Doctrine\Database\StorageUnitDatabase"/>
        </service>

        <service id="Chamilo\Libraries\Storage\Repository\DataClassRepository"
                 alias="Chamilo\Libraries\Storage\Implementations\Doctrine\DataClassRepository"/>

        <service id="Chamilo\Libraries\Storage\Repository\NestedSetDataClassRepository"
                 alias="Chamilo\Libraries\Storage\Implementations\Doctrine\NestedSetDataClassRepository"/>

        <service id="Chamilo\Libraries\Storage\Repository\StorageUnitRepository"
                 alias="Chamilo\Libraries\Storage\Implementations\Doctrine\Repository\StorageUnitRepository"/>

        <!-- Utilities -->
        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\Factory\ConditionPartTranslatorFactory"/>
        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\QueryBuilderConfigurator"/>

        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConditionPartTranslatorService">
            <argument key="$queryCacheEnabled">%chamilo.configuration.debug.enable_query_cache%</argument>
        </service>

        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\ConditionPart\CaseConditionVariableTranslator">
            <tag name="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConditionPartTranslatorService"/>
        </service>
        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\ConditionPart\CaseElementConditionVariableTranslator">
            <tag name="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConditionPartTranslatorService"/>
        </service>
        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\ConditionPart\DateFormatConditionVariableTranslator">
            <tag name="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConditionPartTranslatorService"/>
        </service>
        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\ConditionPart\DistinctConditionVariableTranslator">
            <tag name="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConditionPartTranslatorService"/>
        </service>
        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\ConditionPart\FunctionConditionVariableTranslator">
            <tag name="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConditionPartTranslatorService"/>
        </service>
        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\ConditionPart\OperationConditionVariableTranslator">
            <tag name="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConditionPartTranslatorService"/>
        </service>
        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\ConditionPart\PropertiesConditionVariableTranslator">
            <tag name="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConditionPartTranslatorService"/>
        </service>
        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\ConditionPart\PropertyConditionVariableTranslator">
            <tag name="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConditionPartTranslatorService"/>
        </service>
        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\ConditionPart\StaticConditionVariableTranslator">
            <tag name="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConditionPartTranslatorService"/>
        </service>

        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\ConditionPart\ComparisonConditionTranslator">
            <tag name="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConditionPartTranslatorService"/>
        </service>
        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\ConditionPart\EqualityConditionTranslator">
            <tag name="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConditionPartTranslatorService"/>
        </service>
        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\ConditionPart\InConditionTranslator">
            <tag name="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConditionPartTranslatorService"/>
        </service>
        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\ConditionPart\AndConditionTranslator">
            <tag name="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConditionPartTranslatorService"/>
        </service>
        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\ConditionPart\OrConditionTranslator">
            <tag name="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConditionPartTranslatorService"/>
        </service>
        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\ConditionPart\NotConditionTranslator">
            <tag name="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConditionPartTranslatorService"/>
        </service>
        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\ConditionPart\PatternMatchConditionTranslator">
            <tag name="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConditionPartTranslatorService"/>
        </service>
        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\ConditionPart\RegularExpressionConditionTranslator">
            <tag name="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConditionPartTranslatorService"/>
        </service>
        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\ConditionPart\SubselectConditionTranslator">
            <tag name="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConditionPartTranslatorService"/>
        </service>

        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\ConditionPart\ContainsConditionTranslator">
            <tag name="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConditionPartTranslatorService"/>
        </service>
        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\ConditionPart\StartsWithConditionTranslator">
            <tag name="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConditionPartTranslatorService"/>
        </service>
        <service id="Chamilo\Libraries\Storage\Implementations\Doctrine\ConditionPart\EndsWithConditionTranslator">
            <tag name="Chamilo\Libraries\Storage\Implementations\Doctrine\Service\ConditionPartTranslatorService"/>
        </service>

    </services>
</container>