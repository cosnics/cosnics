<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autowire="true"
                  autoconfigure="true"
                  public="true"/>

        <!-- Connection -->
        <service id="Chamilo\Libraries\Storage\DataManager\AdoDb\DataSourceName">
            <argument>%chamilo.configuration.database%</argument>
        </service>

        <service id="Chamilo\Libraries\Storage\DataManager\AdoDb\Factory\ConnectionFactory"/>

        <service id="ADOConnection"
                 class="ADOConnection">
            <factory service="Chamilo\Libraries\Storage\DataManager\AdoDb\Factory\ConnectionFactory"
                     method="getConnection"/>
        </service>

        <!-- Database Layer -->
        <service id="Chamilo\Libraries\Storage\DataManager\AdoDb\Database\DataClassDatabase"/>
        <service id="Chamilo\Libraries\Storage\DataManager\AdoDb\Database\StorageUnitDatabase"/>

        <!-- Repositories -->
        <service id="Chamilo\Libraries\Storage\DataManager\AdoDb\DataClassRepository"
                 class="Chamilo\Libraries\Storage\DataManager\Repository\DataClassRepository">
            <argument key="$dataClassDatabase"
                      type="service"
                      id="Chamilo\Libraries\Storage\DataManager\Doctrine\Database\DataClassDatabase"/>
            <argument key="$queryCacheEnabled">%chamilo.configuration.debug.enable_query_cache%</argument>
        </service>

        <service id="Chamilo\Libraries\Storage\DataManager\AdoDb\NestedSetDataClassRepository"
                 class="Chamilo\Libraries\Storage\DataManager\Repository\NestedSetDataClassRepository">
            <argument key="$dataClassDatabase"
                      type="service"
                      id="Chamilo\Libraries\Storage\DataManager\AdoDb\Database\DataClassDatabase"/>
            <argument key="$queryCacheEnabled">%chamilo.configuration.debug.enable_query_cache%</argument>
        </service>

        <service id="Chamilo\Libraries\Storage\DataManager\AdoDb\StorageUnitRepository"
                 class="Chamilo\Libraries\Storage\DataManager\Repository\StorageUnitRepository">
            <argument type="service"
                      id="Chamilo\Libraries\Storage\DataManager\AdoDb\Database\StorageUnitDatabase"/>
        </service>

        <!-- Utilities -->

        <service id="Chamilo\Libraries\Storage\DataManager\AdoDb\Factory\ConditionPartTranslatorFactory"/>
        <service id="Chamilo\Libraries\Storage\DataManager\AdoDb\Service\RecordProcessor"/>
        <service id="Chamilo\Libraries\Storage\DataManager\AdoDb\Service\ParametersProcessor"/>

        <service id="Chamilo\Libraries\Storage\DataManager\AdoDb\Service\ConditionPartTranslatorService">
            <argument key="$queryCacheEnabled">%chamilo.configuration.debug.enable_query_cache%</argument>
        </service>

    </services>
</container>