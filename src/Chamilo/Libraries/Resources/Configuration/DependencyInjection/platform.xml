<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://symfony.com/schema/dic/services"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autowire="true"
                  autoconfigure="true"
                  public="true"/>

        <service id="Chamilo\Libraries\Platform\Security"/>

        <service id="Chamilo\Libraries\Platform\Session\SessionFactory">
            <argument key="$sessionStorage"
                      type="service"
                      id="Symfony\Component\HttpFoundation\Session\Storage\NativeSessionStorage"/>
            <argument key="$securityKey">%chamilo.configuration.general.security_key%</argument>
        </service>

        <service id="Chamilo\Libraries\Platform\Session\SessionHandlerFactory">
            <argument key="$configuredSessionHandler">%chamilo.configuration.session.session_handler%</argument>
        </service>

        <service id="Chamilo\Libraries\Platform\Session\PdoSessionHandlerFactory">
            <argument key="$connection"
                      type="service"
                      id="Doctrine\DBAL\Connection\Session"/>
        </service>

        <service id="Chamilo\Libraries\Translation\Translation">
            <factory class="Chamilo\Libraries\Translation\Translation"
                     method="getInstance"/>
        </service>

        <service id="Chamilo\Libraries\Platform\Translator"
                 class="Chamilo\Libraries\Translation\Translation"/>

        <service id="Chamilo\Libraries\Platform\TranslationCacheService"/>

        <service id="Hackzilla\PasswordGenerator\Generator\PasswordGeneratorInterface"
                 alias="Chamilo\Libraries\Platform\PasswordGenerator"/>

        <service id="Chamilo\Libraries\Platform\PasswordGenerator">
            <factory service="Chamilo\Libraries\Platform\PasswordGeneratorFactory"
                     method="createPasswordGenerator"/>
        </service>

        <service id="Chamilo\Libraries\Platform\PasswordGeneratorFactory" />
    </services>
</container>