<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://symfony.com/schema/dic/services"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autowire="true"
                  autoconfigure="true"
                  public="true"/>

        <!-- SYMFONY -->
        <service id="Chamilo\Libraries\Platform\ChamiloRequest">
            <factory class="Chamilo\Libraries\Platform\ChamiloRequest"
                     method="createFromGlobals"/>
        </service>

        <service id="Symfony\Component\Translation\Translator">
            <factory service="Chamilo\Libraries\Translation\TranslatorFactory"
                     method="createTranslator"/>
            <argument>%chamilo.configuration.general.language%</argument>
        </service>

        <service id="Chamilo\Libraries\Format\Twig\TwigEnvironmentFactory"/>

        <service id="Twig\Environment">
            <factory method="createEnvironment"
                     service="Chamilo\Libraries\Format\Twig\TwigEnvironmentFactory"/>
            <argument type="service"
                      id="Symfony\Component\Translation\Translator"/>
            <argument type="service"
                      id="Chamilo\Libraries\Architecture\Application\Routing\UrlGenerator"/>
        </service>

        <service id="Chamilo\Libraries\Format\Twig\TwigCacheService">
            <tag name="Chamilo\Libraries\Cache\CacheDataPreLoaderService"/>
        </service>

        <service id="Symfony\Component\Form\FormFactory">
            <factory method="buildFormFactory"
                     service="Chamilo\Libraries\Format\Form\SymfonyFormFactoryBuilder"/>
            <argument type="service"
                      id="Twig\Environment"/>
            <argument type="service"
                      id="Symfony\Component\Validator\Validator"/>
        </service>

        <service id="HTMLPurifier">
            <factory method="buildHtmlPurifier"
                     service="Chamilo\Libraries\File\HtmlPurifierFactory"/>
        </service>

        <service id="SimplePie\SimplePie"/>

        <service id="Chamilo\Libraries\Format\Form\SymfonyFormFactoryBuilder"/>

        <service id="Symfony\Component\Validator\Validator">
            <factory method="createValidator"
                     service="Chamilo\Libraries\Format\Validator\ValidatorFactory"/>
        </service>

        <service id="Chamilo\Libraries\Format\Validator\ValidatorFactory">
            <argument key="$translator"
                      type="service"
                      id="Symfony\Component\Translation\Translator"/>
            <argument key="$devMode">%chamilo.configuration.debug.show_errors%</argument>
        </service>

        <service id="Symfony\Component\Validator\ValidatorBuilder"/>

        <service id="Monolog\Logger">
            <argument>Chamilo</argument>
        </service>

        <service id="Symfony\Component\Config\Definition\Processor"/>

        <service id="Symfony\Component\EventDispatcher"
                 class="Symfony\Component\EventDispatcher\EventDispatcher"/>
        <service id="Symfony\Component\EventDispatcher\EventDispatcherInterface"
                 alias="Symfony\Component\EventDispatcher"/>

        <service id="Symfony\Component\Yaml\Parser"/>
        <service id="Symfony\Component\Filesystem\Filesystem"/>

        <service id="Symfony\Component\Serializer\Normalizer\ObjectNormalizer"/>
        <service id="Symfony\Component\Serializer\Encoder\XmlEncoder"/>
        <service id="Symfony\Component\Serializer\Encoder\JsonEncoder"/>

        <service id="Symfony\Component\Serializer\Serializer">
            <argument key="$normalizers"
                      type="collection">
                <argument type="service"
                          id="Symfony\Component\Serializer\Normalizer\ObjectNormalizer"/>
            </argument>
            <argument key="$encoders"
                      type="collection">
                <argument type="service"
                          id="Symfony\Component\Serializer\Encoder\XmlEncoder"/>
                <argument type="service"
                          id="Symfony\Component\Serializer\Encoder\JsonEncoder"/>
            </argument>
        </service>

        <service id="Chamilo\Libraries\Console\Command\Vendor\PHPStan\PHPStanPackages"/>

    </services>
</container>