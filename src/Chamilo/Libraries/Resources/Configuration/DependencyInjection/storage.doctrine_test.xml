<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autowire="true"
                  autoconfigure="true"
                  public="true"/>
        <!-- Identical to the Doctrine Storage configuration but entirely configured to the test database connection -->
        <!-- Connection -->
        <service id="Chamilo\Libraries\Storage\DataManager\Doctrine\Test\DataSourceName"
                 class="Chamilo\Libraries\Storage\DataManager\Doctrine\DataSourceName">
            <argument>%chamilo.configuration.database.test%</argument>
        </service>

        <service id="Chamilo\Libraries\Storage\DataManager\Doctrine\Test\Factory\ConnectionFactory"
                 class="Chamilo\Libraries\Storage\DataManager\Doctrine\Factory\ConnectionFactory">
            <argument type="service"
                      id="Chamilo\Libraries\Storage\DataManager\Doctrine\Test\DataSourceName"/>
        </service>

        <service id="Doctrine\Test\DBAL\Connection"
                 class="Doctrine\DBAL\Connection">
            <factory service="Chamilo\Libraries\Storage\DataManager\Doctrine\Test\Factory\ConnectionFactory"
                     method="getConnection"/>
        </service>

        <!-- Database Layer -->
        <service id="Chamilo\Libraries\Storage\DataManager\Doctrine\Test\Database\DataClassDatabase"
                 class="Chamilo\Libraries\Storage\DataManager\Doctrine\Database\DataClassDatabase">
            <argument type="service"
                      id="Doctrine\Test\DBAL\Connection"/>
            <argument type="service"
                      id="Chamilo\Libraries\Storage\DataManager\StorageAliasGenerator"/>
            <argument type="service"
                      id="Chamilo\Libraries\Architecture\ErrorHandler\ExceptionLogger"/>
            <argument type="service"
                      id="Chamilo\Libraries\Storage\DataManager\Doctrine\Service\ConditionPartTranslatorService"/>
            <argument type="service"
                      id="Chamilo\Libraries\Storage\DataManager\Doctrine\Service\ParametersProcessor"/>
            <argument type="service"
                      id="Chamilo\Libraries\Storage\DataManager\Doctrine\Processor\RecordProcessor"/>
        </service>

        <service id="Chamilo\Libraries\Storage\DataManager\Doctrine\Test\Database\StorageUnitDatabase"
                 class="Chamilo\Libraries\Storage\DataManager\Doctrine\Database\StorageUnitDatabase">
            <argument type="service"
                      id="Doctrine\Test\DBAL\Connection"/>
            <argument type="service"
                      id="Chamilo\Libraries\Storage\DataManager\StorageAliasGenerator"/>
            <argument type="service"
                      id="Chamilo\Libraries\Architecture\ErrorHandler\ExceptionLogger"/>
        </service>

        <!-- Repositories -->

        <service id="Chamilo\Libraries\Storage\DataManager\Doctrine\Test\Repository\DataClassRepository"
                 class="Chamilo\Libraries\Storage\DataManager\Repository\DataClassRepository">
            <argument type="service"
                      id="Chamilo\Libraries\Storage\Cache\DataClassRepositoryCache"/>
            <argument type="service"
                      id="Chamilo\Libraries\Storage\DataManager\Doctrine\Test\Database\DataClassDatabase"/>
            <argument type="service"
                      id="Chamilo\Libraries\Storage\DataClass\DataClassFactory"/>
            <argument>%chamilo.configuration.debug.enable_query_cache%</argument>
        </service>

        <service id="Chamilo\Libraries\Storage\DataManager\Doctrine\Test\Repository\StorageUnitRepository"
                 class="Chamilo\Libraries\Storage\DataManager\Repository\StorageUnitRepository">
            <argument type="service"
                      id="Chamilo\Libraries\Storage\DataManager\Doctrine\Test\Database\StorageUnitDatabase"/>
        </service>

    </services>
</container>