<?xml version="1.0" encoding="UTF-8"?>
<object name="configuration_setting">
    <properties>
        <property name="id"
                  type="integer"
                  unsigned="1"
                  notnull="1"
                  autoincrement="true"/>
        <property name="context"
                  type="string"
                  length="255"/>
        <property name="variable"
                  type="string"
                  length="255"/>
        <property name="value"
                  type="text"/>
        <property name="user_setting"
                  type="smallint"
                  unsigned="1"
                  notnull="1"
                  default="0"/>
    </properties>
    <indexes>
        <index name="idx_user_setting">
            <property name="user_setting"/>
        </index>
        <index name="unq_context_variable_user_setting"
               type="unique">
            <property name="context"/>
            <property name="variable"/>
            <property name="user_setting"/>
        </index>
    </indexes>
</object>