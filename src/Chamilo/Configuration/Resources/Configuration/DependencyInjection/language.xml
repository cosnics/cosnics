<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://symfony.com/schema/dic/services"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autowire="true"
                  autoconfigure="true"
                  public="true"/>

        <service id="Chamilo\Configuration\Service\LanguageConsulter">
            <argument type="service"
                      id="Chamilo\Configuration\Service\LanguageCacheLoader"/>
        </service>

        <service id="Chamilo\Configuration\Package\Service\InternationalizationBundlesCacheService">
            <argument key="$cacheAdapter"
                      type="service"
                      id="Chamilo\Configuration\Package\Service\InternationalizationBundlesCacheAdapter"/>
        </service>

        <service id="Chamilo\Configuration\Package\Service\InternationalizationBundlesCacheAdapter"
                 class="Symfony\Component\Cache\Adapter\FilesystemAdapter">
            <factory service="Chamilo\Libraries\Cache\SymfonyCacheAdapterFactory"
                     method="createFilesystemAdapter"/>
            <argument key="$namespace">Chamilo\Configuration\Package\InternationalizationBundles</argument>
        </service>

        <service id="Chamilo\Configuration\Service\LanguageCacheLoader"
                 class="Chamilo\Configuration\Service\DataCacheLoader">
            <argument key="$cacheableDataLoader"
                      type="service"
                      id="Chamilo\Configuration\Service\LanguageLoader"/>
            <argument key="$cacheAdapter"
                      type="service"
                      id="Chamilo\Configuration\Service\LanguageCacheAdapter"/>
        </service>

        <service id="Chamilo\Configuration\Service\LanguageCacheAdapter"
                 class="Symfony\Component\Cache\Adapter\PhpFilesAdapter">
            <factory service="Chamilo\Libraries\Cache\SymfonyCacheAdapterFactory"
                     method="createPhpFilesAdapter"/>
            <argument key="$namespace">Chamilo\Configuration\Service\Language</argument>
        </service>

        <service id="Chamilo\Configuration\Service\LanguageLoader"/>
        <service id="Chamilo\Configuration\Storage\Repository\LanguageRepository"/>
    </services>
</container>