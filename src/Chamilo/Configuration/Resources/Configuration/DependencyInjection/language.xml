<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autowire="true"
                  autoconfigure="true"
                  public="true"/>
        <service id="Chamilo\Configuration\Service\LanguageConsulter">
            <argument type="service"
                      id="Chamilo\Configuration\Service\LanguageCacheLoader"/>
        </service>

        <service id="Chamilo\Configuration\Service\LanguageCacheLoader"
                 class="Chamilo\Configuration\Service\DataCacheLoader">
            <argument type="service"
                      id="Chamilo\Configuration\Service\LanguageLoader"/>
        </service>

        <service id="Chamilo\Configuration\Service\LanguageLoader">
            <argument type="service"
                      id="Chamilo\Configuration\Storage\Repository\LanguageRepository"/>
        </service>

        <service id="Chamilo\Configuration\Storage\Repository\LanguageRepository">
            <argument type="service"
                      id="Chamilo\Libraries\Storage\DataManager\Doctrine\DataClassRepository"/>
        </service>
    </services>
</container>