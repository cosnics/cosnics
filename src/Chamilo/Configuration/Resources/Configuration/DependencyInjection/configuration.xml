<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://symfony.com/schema/dic/services"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autowire="true"
                  autoconfigure="true"
                  public="true"/>
        <service id="Chamilo\Configuration\Service\Consulter\ConfigurationConsulter">
            <argument type="service"
                      id="Chamilo\Configuration\Service\DataLoader\ConfigurationCachePreLoader"/>
        </service>

        <service id="Chamilo\Configuration\Service\DataLoader\ConfigurationCachePreLoader"
                 class="Chamilo\Configuration\Service\DataLoader\AggregatedCacheDataPreLoader">
            <argument key="$cacheAdapter"
                      type="service"
                      id="Chamilo\Configuration\Service\ConfigurationCacheAdapter"/>
            <argument key="$dataPreLoaders"
                      type="collection">
                <argument type="service"
                          id="Chamilo\Configuration\Service\DataLoader\FileConfigurationCacheDataPreLoader"></argument>
                <argument type="service"
                          id="Chamilo\Configuration\Service\DataLoader\StorageConfigurationCacheDataPreLoader"></argument>
            </argument>
        </service>

        <service id="Chamilo\Configuration\Service\ConfigurationCacheAdapter"
                 class="Symfony\Component\Cache\Adapter\PhpFilesAdapter">
            <factory service="Chamilo\Libraries\Cache\SymfonyCacheAdapterFactory"
                     method="createPhpFilesAdapter"/>
            <argument key="$namespace">Chamilo\Configuration\Service\Configuration</argument>
        </service>

        <service id="Chamilo\Configuration\Service\DataLoader\StorageConfigurationCacheDataPreLoader">
            <argument key="$cacheAdapter"
                      type="service"
                      id="Chamilo\Configuration\Service\DataLoader\StorageConfigurationCacheAdapter"/>
        </service>

        <service id="Chamilo\Configuration\Service\DataLoader\StorageConfigurationCacheAdapter"
                 class="Symfony\Component\Cache\Adapter\PhpFilesAdapter">
            <factory service="Chamilo\Libraries\Cache\SymfonyCacheAdapterFactory"
                     method="createPhpFilesAdapter"/>
            <argument key="$namespace">Chamilo\Configuration\Service\Configuration\Storage</argument>
        </service>

        <service id="Chamilo\Configuration\Service\ConfigurationService"/>
        <service id="Chamilo\Configuration\Storage\Repository\ConfigurationRepository"/>

        <service id="Chamilo\Configuration\Service\Consulter\FileConfigurationConsulter"
                 class="Chamilo\Configuration\Service\Consulter\ConfigurationConsulter">
            <argument key="$dataPreLoader"
                      type="service"
                      id="Chamilo\Configuration\Service\DataLoader\FileConfigurationCacheDataPreLoader"/>
        </service>

        <service id="Chamilo\Configuration\Service\DataLoader\FileConfigurationCacheDataPreLoader">
            <argument key="$cacheAdapter"
                      type="service"
                      id="Chamilo\Configuration\Service\DataLoader\FileConfigurationCacheAdapter"/>
        </service>

        <service id="Chamilo\Configuration\Service\DataLoader\FileConfigurationCacheAdapter"
                 class="Symfony\Component\Cache\Adapter\ArrayAdapter"/>

        <service id="Chamilo\Configuration\Service\FileConfigurationLocator"/>

        <service id="Chamilo\Configuration\Package\Service\PackageFactory"/>
        <service id="Chamilo\Configuration\Package\PlatformPackageBundles"/>

        <service id="Chamilo\Configuration\Package\Service\PackageBundlesCacheService">
            <argument key="$cacheAdapter"
                      type="service"
                      id="Chamilo\Configuration\Package\Service\PackageBundlesCacheAdapter"/>
        </service>

        <service id="Chamilo\Configuration\Package\Service\PackageBundlesCacheAdapter"
                 class="Symfony\Component\Cache\Adapter\FilesystemAdapter">
            <factory service="Chamilo\Libraries\Cache\SymfonyCacheAdapterFactory"
                     method="createFilesystemAdapter"/>
            <argument key="$namespace">Chamilo\Configuration\Package\PlatformPackageBundles</argument>
        </service>

        <service id="Chamilo\Configuration\Service\PackageContextSequencer"/>
    </services>
</container>