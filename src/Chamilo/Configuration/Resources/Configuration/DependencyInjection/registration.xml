<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://symfony.com/schema/dic/services"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autowire="true"
                  autoconfigure="true"
                  public="true"/>

        <service id="Chamilo\Configuration\Service\RegistrationConsulter">
            <argument key="$dataLoader"
                      type="service"
                      id="Chamilo\Configuration\Service\RegistrationCacheLoader"/>
        </service>

        <service id="Chamilo\Configuration\Service\RegistrationCacheLoader"
                 class="Chamilo\Configuration\Service\DataCacheLoader">
            <argument key="$cacheableDataLoader"
                      type="service"
                      id="Chamilo\Configuration\Service\RegistrationLoader"/>
            <argument key="$cacheAdapter"
                      type="service"
                      id="Chamilo\Configuration\Service\RegistrationCacheAdapter"/>
        </service>

        <service id="Chamilo\Configuration\Service\RegistrationCacheAdapter"
                 class="Symfony\Component\Cache\Adapter\PhpFilesAdapter">
            <factory service="Chamilo\Libraries\Cache\SymfonyCacheAdapterFactory"
                     method="createPhpFilesAdapter"/>
            <argument key="$namespace">Chamilo\Configuration\Service\Registration</argument>
        </service>

        <service id="Chamilo\Configuration\Service\RegistrationLoader"/>
        <service id="Chamilo\Configuration\Storage\Repository\RegistrationRepository"/>
    </services>
</container>