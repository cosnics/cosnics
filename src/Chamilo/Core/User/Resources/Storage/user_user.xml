<?xml version="1.0" encoding="UTF-8"?>
<object name="user_user">
    <properties>
        <property name="id"
                  type="integer"
                  unsigned="1"
                  notnull="1"
                  autoincrement="true"/>
        <property name="lastname"
                  type="string"
                  length="60"/>
        <property name="firstname"
                  type="string"
                  length="60"/>
        <property name="username"
                  type="string"
                  length="60"
                  notnull="1"/>
        <property name="password"
                  type="string"
                  length="150"
                  notnull="1"/>
        <property name="auth_source"
                  type="string"
                  length="50"
                  default="platform"/>
        <property name="external_uid"
                  type="string"
                  length="50"/>
        <property name="email"
                  type="string"
                  length="100"/>
        <property name="status"
                  type="integer"
                  notnull="1"
                  default="5"/>
        <property name="admin"
                  type="boolean"
                  default="0"/>
        <property name="official_code"
                  type="string"
                  length="40"/>
        <property name="phone"
                  type="string"
                  length="30"/>
        <property name="picture_uri"
                  type="string"
                  length="250"/>
        <property name="creator_id"
                  type="integer"
                  unsigned="1"/>
        <property name="disk_quota"
                  type="bigint"
                  unsigned="1"
                  notnull="1"
                  default="209715200"/>
        <property name="database_quota"
                  type="integer"
                  unsigned="1"
                  notnull="1"
                  default="10000"/>
        <property name="activation_date"
                  type="integer"
                  unsigned="1"
                  notnull="1"
                  default="0"/>
        <property name="expiration_date"
                  type="integer"
                  unsigned="1"
                  notnull="1"
                  default="0"/>
        <property name="registration_date"
                  type="integer"
                  unsigned="1"
                  notnull="1"
                  default="0"/>
        <property name="active"
                  type="boolean"
                  default="1"/>
        <property name="security_token"
                  type="string"
                  length="40"/>
        <property name="approved"
                  type="boolean"
                  default="1"/>
        <property name="terms_date"
                  type="integer"
                  unsigned="1"
                  default="0"/>
    </properties>
    <indexes>
        <index name="unq_username"
               type="unique">
            <property name="username"/>
        </index>
        <index name="idx_official_code">
            <property name="official_code"/>
        </index>
    </indexes>
</object>