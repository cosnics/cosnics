<?xml version="1.0" encoding="UTF-8"?>
<object name="repository_content_object">
    <properties>
        <property name="id"
                  type="integer"
                  unsigned="1"
                  notnull="1"
                  autoincrement="true"/>
        <property name="owner_id"
                  type="integer"
                  unsigned="1"
                  notnull="1"/>
        <property name="object_number"
                  type="text"
                  length="36"
                  notnull="1"/>
        <property name="parent_id"
                  type="integer"
                  unsigned="1"
                  notnull="1"
                  default="0"/>
        <property name="template_registration_id"
                  type="integer"
                  unsigned="1"
                  default="NULL"/>
        <property name="created"
                  type="integer"
                  unsigned="1"
                  notnull="1"/>
        <property name="modified"
                  type="integer"
                  unsigned="1"
                  notnull="1"/>
        <property name="state"
                  type="integer"
                  length="1"
                  unsigned="1"
                  notnull="1"
                  default="2"/>
        <property name="current"
                  type="integer"
                  length="3"
                  unsigned="1"
                  notnull="1"
                  default="1"/>
        <property name="comment"
                  type="text"
                  length="60"/>
        <property name="type"
                  type="text"
                  length="255"
                  notnull="1"/>
        <property name="title"
                  type="text"
                  notnull="1"/>
        <property name="description"
                  type="text"/>
        <property name="content_hash"
                  type="text"
                  length="32"/>
    </properties>
    <indexes>
        <index name="idx_owner_id">
            <property name="owner_id"/>
        </index>
        <index name="idx_object_number">
            <property name="object_number"/>
        </index>
        <index name="idx_type">
            <property name="type"/>
        </index>
        <index name="idx_parent_id">
            <property name="parent_id"/>
        </index>
        <index name="idx_state">
            <property name="state"/>
        </index>
        <index name="idx_category">
            <property name="owner_id"/>
            <property name="type"/>
        </index>
    </indexes>
</object>