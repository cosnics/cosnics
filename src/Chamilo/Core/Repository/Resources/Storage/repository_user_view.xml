<?xml version="1.0" encoding="UTF-8"?>
<object name="repository_user_view">
    <properties>
        <property name="id"
                  type="integer"
                  notnull="1"
                  autoincrement="true"/>
        <property name="user_id"
                  type="integer"
                  notnull="1"
                  default="0"/>
        <property name="name"
                  type="text"
                  length="100"
                  notnull="1"
                  default=""/>
        <property name="description"
                  type="text"/>
    </properties>
    <indexes>
        <index name="idx_user_id">
            <property name="user_id"/>
        </index>
        <index name="unq_name"
               type="unique">
            <property name="user_id"/>
            <property name="name"/>
        </index>
    </indexes>
</object>