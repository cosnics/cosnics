<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://symfony.com/schema/dic/services"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autowire="true"
                  autoconfigure="true"
                  public="true"/>

        <service id="Chamilo\Core\Repository\Service\ContentObjectActionRenderer">
            <argument key="$user"
                      type="service"
                      id="Chamilo\Core\User\User"/>
            <argument key="$workspace"
                      type="service"
                      id="Chamilo\Core\Repository\Workspace"/>
        </service>
        <service id="Chamilo\Core\Repository\Service\ContentObjectUrlGenerator"/>
        <service id="Chamilo\Core\Repository\Service\WorkspaceExtensionManager"/>
        <service id="Chamilo\Core\Repository\Service\ContentObjectCopierWrapper"/>
        <service id="Chamilo\Core\Repository\Service\ContentObjectService"/>

        <service id="Chamilo\Core\Repository\Common\Renderer\Type\GalleryTableContentObjectRenderer">
            <argument key="$workspace"
                      type="service"
                      id="Chamilo\Core\Repository\Workspace"/>
        </service>
        <service id="Chamilo\Core\Repository\Common\Renderer\Type\SlideshowContentObjectRenderer">
            <argument key="$workspace"
                      type="service"
                      id="Chamilo\Core\Repository\Workspace"/>
        </service>
        <service id="Chamilo\Core\Repository\Common\Renderer\Type\TableContentObjectRenderer">
            <argument key="$workspace"
                      type="service"
                      id="Chamilo\Core\Repository\Workspace"/>
        </service>

        <service id="Chamilo\Core\Repository\Quota\Rights\Service\RightsService">
            <argument key="$rightsRepository"
                      type="service"
                      id="Chamilo\Core\Repository\Quota\Rights\Storage\Repository\RightsRepository"/>
        </service>

        <service id="Chamilo\Core\Repository\Quota\Service\StorageSpaceCalculator"/>
        <service id="Chamilo\Core\Repository\Quota\Rights\Storage\Repository\RightsRepository"/>

        <service id="Chamilo\Core\Repository\Quota\Service\CalculatorCacheService">
            <argument key="$cacheAdapter"
                      type="service"
                      id="Chamilo\Core\Repository\Quota\Service\CalculatorCacheAdapter"/>
        </service>

        <service id="Chamilo\Core\Repository\Quota\Service\CalculatorCacheAdapter"
                 class="Symfony\Component\Cache\Adapter\PhpFilesAdapter">
            <factory service="Chamilo\Libraries\Cache\SymfonyCacheAdapterFactory"
                     method="createPhpFilesAdapter"/>
            <argument key="$namespace">Chamilo\Core\Repository\Quota\Calculator</argument>
        </service>

        <service id="Chamilo\Core\Repository\Storage\Repository\ContentObjectRepository"/>

        <service id="Chamilo\Core\Repository\Common\ContentObjectDifferenceRenderer"/>

        <service id="Chamilo\Core\Repository\Service\AdminActionProvider">
            <tag name="Chamilo\Core\Admin\Service\ActionProvider"/>
        </service>
    </services>
</container>