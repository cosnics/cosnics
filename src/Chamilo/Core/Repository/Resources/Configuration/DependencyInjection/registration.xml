<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://symfony.com/schema/dic/services"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autowire="true"
                  autoconfigure="true"
                  public="true"/>

        <service id="Chamilo\Core\Repository\Service\TemplateRegistrationConsulter">
            <argument key="$templateRegistrationCacheDataPreLoader"
                      type="service"
                      id="Chamilo\Core\Repository\Service\TemplateRegistrationCacheDataPreLoader"/>
        </service>

        <service id="Chamilo\Core\Repository\Service\TemplateRegistrationCacheDataPreLoader">
            <argument key="$cacheAdapter"
                      type="service"
                      id="Chamilo\Core\Repository\Service\TemplateRegistrationCacheAdapter"/>
        </service>

        <service id="Chamilo\Core\Repository\Service\TemplateRegistrationCacheAdapter"
                 class="Symfony\Component\Cache\Adapter\FilesystemAdapter">
            <factory service="Chamilo\Libraries\Cache\SymfonyCacheAdapterFactory"
                     method="createFilesystemAdapter"/>
            <argument key="$namespace">Chamilo\Core\Repository</argument>
        </service>

        <service id="Chamilo\Core\Repository\Service\TypeSelectorCacheAdapter"
                 class="Symfony\Component\Cache\Adapter\FilesystemAdapter">
            <factory service="Chamilo\Libraries\Cache\SymfonyCacheAdapterFactory"
                     method="createFilesystemAdapter"/>
            <argument key="$namespace">Chamilo\Core\Repository\Selector</argument>
        </service>

        <service id="Chamilo\Core\Repository\Storage\Repository\TemplateRegistrationRepository"/>
    </services>
</container>