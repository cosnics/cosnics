<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://symfony.com/schema/dic/services"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autowire="true"
                  autoconfigure="true"
                  public="true"/>

        <service id="Chamilo\Core\Repository\Service\TemplateRegistrationConsulter">
            <argument key="$dataLoader"
                      type="service"
                      id="Chamilo\Core\Repository\Service\TemplateRegistrationLoader"/>
        </service>

        <service id="Chamilo\Core\Repository\Service\TemplateRegistrationLoader"/>

        <service id="Chamilo\Core\Repository\Service\TemplateRegistrationLoader">
            <argument key="$cacheAdapter"
                      type="service"
                      id="Chamilo\Core\Repository\Service\TemplateRegistrationLoaderCacheAdapter"/>
        </service>

        <service id="Chamilo\Core\Repository\Service\TemplateRegistrationLoaderCacheAdapter"
                 class="Symfony\Component\Cache\Adapter\FilesystemAdapter">
            <argument key="$namespace">Chamilo\Core\Repository</argument>
            <argument key="$directory"
                      type="expression">parameter('chamilo.configuration.storage')['cache_path']</argument>
        </service>

        <service id="Chamilo\Core\Repository\Service\TypeSelectorCacheAdapter"
                 class="Symfony\Component\Cache\Adapter\FilesystemAdapter">
            <argument key="$namespace">Chamilo\Core\Repository\Selector</argument>
            <argument key="$directory"
                      type="expression">parameter('chamilo.configuration.storage')['cache_path']
            </argument>
        </service>

        <service id="Chamilo\Core\Repository\Storage\Repository\TemplateRegistrationRepository"/>
    </services>
</container>