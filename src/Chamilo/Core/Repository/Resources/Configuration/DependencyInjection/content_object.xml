<?xml version="1.0" encoding="UTF-8" ?>
<container
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://symfony.com/schema/dic/services"
        xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service
                id="chamilo.core.repository.service.content_object_template.loader"
                class="Chamilo\Core\Repository\Service\ContentObjectTemplate\ContentObjectTemplateLoader">
            <argument
                    type="service"
                    id="chamilo.libraries.file.path_builder"/>
        </service>

        <service
                id="chamilo.core.repository.service.configuration_cache_service"
                class="Chamilo\Core\Repository\Service\ConfigurationCacheService">
        </service>

        <service
                id="chamilo.core.repository.storage.repository.content_object_template_repository"
                class="Chamilo\Core\Repository\Storage\Repository\ContentObjectTemplateRepository">
        </service>

        <service
                id="chamilo.core.repository.workspace.repository.content_object_repository"
                class="Chamilo\Core\Repository\Workspace\Repository\ContentObjectRepository">
        </service>

        <service
                id="chamilo.core.repository.service.content_object_template.synchronizer"
                class="Chamilo\Core\Repository\Service\ContentObjectTemplate\ContentObjectTemplateSynchronizer">
            <argument
                    type="service"
                    id="chamilo.core.repository.service.content_object_template.loader"/>
            <argument
                    type="service"
                    id="chamilo.core.repository.storage.repository.content_object_template_repository"/>
            <argument
                    type="service"
                    id="chamilo.core.repository.service.configuration_cache_service"/>
        </service>

        <service
                id="chamilo.core.repository.workspace.repository.content_object_repository"
                class="Chamilo\Core\Repository\Workspace\Repository\ContentObjectRepository">
        </service>

        <service
                id="chamilo.core.repository.storage.repository.resource_fixer_repository"
                class="Chamilo\Core\Repository\Storage\Repository\ResourceFixerRepository">
            <argument
                    type="service"
                    id="chamilo.libraries.storage.data_manager.doctrine.data_class_repository"/>
        </service>

        <service
                id="chamilo.core.repository.service.resource_fixer.resource_fixer_director_factory"
                class="Chamilo\Core\Repository\Service\ResourceFixer\ResourceFixerDirectorFactory">
            <argument
                    type="service"
                    id="chamilo.core.repository.storage.repository.resource_fixer_repository"/>
            <argument
                    type="service"
                    id="chamilo.libraries.file.configurable_path_builder"/>
        </service>

        <service
                id="chamilo.core.repository.service.resource_fixer.resource_fixer_director"
                class="Chamilo\Core\Repository\Service\ResourceFixer\ResourceFixerDirector">
            <factory
                    service="chamilo.core.repository.service.resource_fixer.resource_fixer_director_factory"
                    method="buildResourceFixerDirector"/>
        </service>

        <service id="Chamilo\Core\Repository\Publication\Service\PublicationAggregator" autowire="true"/>

        <service
                id="Chamilo\Core\Repository\Publication\Factory\PublicationTargetRepositoryCacheProviderFactory"
                class="Chamilo\Core\Repository\Publication\Factory\PublicationTargetRepositoryCacheProviderFactory">
        </service>

        <service id="Chamilo\Core\Repository\Publication\Storage\PublicationTargetRepositoryCache">
            <factory
                    service="Chamilo\Core\Repository\Publication\Factory\PublicationTargetRepositoryCacheProviderFactory"
                    method="getPublicationTargetRepositoryCacheProvider"/>
        </service>

        <service id="Chamilo\Core\Repository\Publication\Storage\Repository\PublicationTargetRepository">
            <argument
                    type="service"
                    id="Chamilo\Core\Repository\Publication\Storage\PublicationTargetRepositoryCache"/>
        </service>

        <service id="Chamilo\Core\Repository\Publication\Service\PublicationTargetService" autowire="true"/>
        <service id="Chamilo\Core\Repository\Publication\Service\PublicationTargetRenderer" autowire="true"/>
        <service id="Chamilo\Core\Repository\Publication\Service\PublicationTargetProcessor" autowire="true"/>
        <service id="Chamilo\Core\Repository\Publication\Service\PublicationResultsRenderer" autowire="true"/>

    </services>
</container>