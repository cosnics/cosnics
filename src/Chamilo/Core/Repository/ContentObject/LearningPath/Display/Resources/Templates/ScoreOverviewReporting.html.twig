{% set appContext = 'Chamilo\\Core\\Repository\\ContentObject\\LearningPath\\Display' %}

<a style="margin-bottom: 20px;" class="btn btn-default " title="{{ 'Export'|trans({}, 'Chamilo\\Libraries') }}" href="{{ EXPORT_URL }}">
    <span class="inline-glyph fa fa-download"></span><span>{{ 'Export'|trans({}, 'Chamilo\\Libraries') }}</span>
</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>{{ 'Type'|trans({}, appContext) }}</th>
            <th>{{ 'Title'|trans({}, appContext) }}</th>
            <th>{{ 'Path'|trans({}, appContext) }}</th>
            <th>{{ 'NumberOfAttempts'|trans({}, appContext) }}</th>
            <th>{{ 'MinimumScore'|trans({}, appContext) }}</th>
            <th>{{ 'MaximumScore'|trans({}, appContext) }}</th>
            <th>{{ 'AverageScore'|trans({}, appContext) }}</th>
            <th>{{ 'LastScore'|trans({}, appContext) }}</th>
        </tr>
    </thead>
    <tbody>
    {% for SCORE_ROW in SCORE_DATA %}
        <tr>
            <td>{{ SCORE_ROW.type|raw }}</td>
            <td><a href="{{ SCORE_ROW.reporting_url }}">{{ SCORE_ROW.title }}</a></td>
            <td>{{ SCORE_ROW.path }}</td>
            <td>{{ SCORE_ROW.number_of_attempts }}</td>
            <td>
                <div class="progress" style="margin-bottom: 0; max-width: 150px;">
                    <div class="progress-bar " role="progressbar" aria-valuenow="{{ SCORE_ROW.minimum_score }}" aria-valuemin="0" aria-valuemax="100" style="min-width: 2em; width: {{ SCORE_ROW.minimum_score }}%;">
                        {{ SCORE_ROW.minimum_score }}%
                    </div>
                </div>
            </td>
            <td>
                <div class="progress" style="margin-bottom: 0; max-width: 150px;">
                    <div class="progress-bar " role="progressbar" aria-valuenow="{{ SCORE_ROW.minimum_score }}" aria-valuemin="0" aria-valuemax="100" style="min-width: 2em; width: {{ SCORE_ROW.maximum_score }}%;">
                        {{ SCORE_ROW.maximum_score }}%
                    </div>
                </div>
            </td>
            <td>
                <div class="progress" style="margin-bottom: 0; max-width: 150px;">
                    <div class="progress-bar " role="progressbar" aria-valuenow="{{ SCORE_ROW.minimum_score }}" aria-valuemin="0" aria-valuemax="100" style="min-width: 2em; width: {{ SCORE_ROW.average_score }}%;">
                        {{ SCORE_ROW.average_score }}%
                    </div>
                </div>
            </td><td>
                <div class="progress" style="margin-bottom: 0; max-width: 150px;">
                    <div class="progress-bar " role="progressbar" aria-valuenow="{{ SCORE_ROW.minimum_score }}" aria-valuemin="0" aria-valuemax="100" style="min-width: 2em; width: {{ SCORE_ROW.last_score }}%;">
                        {{ SCORE_ROW.last_score }}%
                    </div>
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>