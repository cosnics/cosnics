<div>
    {% set appContext = 'Chamilo\\Core\\Repository\\ContentObject\\Rubric' %}

    {{ getJavascript('Builder/cosnics-rubric.umd.js', appContext) }}
    {{ getCss('cosnics-rubric.css', appContext) }}

    <style>
        #app.mod-sep {
            border: none;
        }
    </style>

    <div id="rubric-result" style="margin-bottom: 40px;">
        <h4 style="margin-top: 0; margin-bottom: 40px;">{{ 'RubricResult'|trans({}, appContext) }}</h4>

        <rubric-result-wrapper v-if="rubricData" :rubric-data="rubricData" :rubric-results="rubricResults"></rubric-result-wrapper>
    </div>

    <script>
        Vue.use(BootstrapVue);
        Vue.use(VueI18n);
        Vue.use(this['cosnics-rubric'].default);

        var rubricDataJSON = '{{ RUBRIC_DATA_JSON|raw }}';
        var data = JSON.parse(rubricDataJSON);

        var rubricResultsJSON = '{{ RUBRIC_RESULTS_JSON|raw }}';
        var results = JSON.parse(rubricResultsJSON);

        var lang;
        try {
            lang = '{{ LANGUAGE|raw }}';
        } catch (err) {
            console.warn('Language could not be set, defaulting to English instead.');
            lang = 'en';
        }

        new Vue({
            i18n: new VueI18n({ locale: lang }),
            el: '#rubric-result',
            data: {
                rubricData: data,
                rubricResults: results
            }
        });
    </script>
</div>


