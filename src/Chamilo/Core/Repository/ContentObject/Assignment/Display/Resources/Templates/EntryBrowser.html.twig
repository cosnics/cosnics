{{ HEADER|raw }}

<style>
    .assignment-properties table {
        width: 100%;
    }

    .tab-pane {
        border: 1px solid #dddddd;
        border-top: none;
        padding: 10px 15px;
    }

    #assignment h3 {
        margin: 5px 0 20px;
    }
</style>

{% set appContext = 'Chamilo\\Core\\Repository\\ContentObject\\Assignment\\Display' %}
{{ BUTTON_TOOLBAR|raw }}

<ul class="nav nav-tabs dynamic-visual-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#entries" aria-controls="entries" role="tab" data-toggle="tab">{{ 'Entries'|trans({}, appContext) }}</a></li>
    <li role="presentation"><a href="#assignment" aria-controls="assignment" role="tab" data-toggle="tab">{{ 'Assignment'|trans({}, appContext) }}</a></li>
    <li role="presentation"><a href="#properties" aria-controls="properties" role="tab" data-toggle="tab">{{ 'Reporting'|trans({}, appContext) }}</a></li>
</ul>

<div class="dynamic-visual-tab-content tab-content">
    <div role="tabpanel" class="tab-pane active" id="entries">
        {{ ENTRY_TABLE|raw }}
    </div>
    <div role="tabpanel" class="tab-pane" id="assignment">
        <h3>{{ CONTENT_OBJECT_TITLE }}</h3>

        {{ CONTENT_OBJECT_RENDITION|raw }}
    </div>
    <div role="tabpanel" class="tab-pane" id="properties">
        <div class="assignment-properties">
            <table class="table table-striped table-bordered table-hover table-responsive table-properties">
                <tbody>
                    <tr>
                        <td class="header" style="vertical-align: middle;">
                            {{ 'EntriesWithScore'|trans({}, appContext) }}
                        </td>
                        <td><div class="badge">{{ SCORE_COUNT }} / {{ ENTRY_COUNT }}</div></td>
                    </tr>
                    <tr>
                        <td class="header" style="vertical-align: middle;">
                            {{ 'EntriesWithFeedback'|trans({}, appContext) }}
                        </td>
                        <td><div class="badge">{{ FEEDBACK_COUNT }} / {{ ENTRY_COUNT }}</div></td>
                    </tr>
                    <tr>
                        <td class="header" style="vertical-align: middle;">
                            {{ 'AverageScore'|trans({}, appContext) }}
                        </td>
                        <td><div class="badge">{{ AVERAGE_SCORE }}</div></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

{{ FOOTER|raw }}