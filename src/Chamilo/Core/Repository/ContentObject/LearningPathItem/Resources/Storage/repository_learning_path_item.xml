<?xml version="1.0" encoding="UTF-8"?>
<object name="repository_learning_path_item">
    <properties>
        <property name="id"
                  type="integer"
                  unsigned="1"
                  notnull="1"/>
        <property name="reference_id"
                  type="integer"
                  unsigned="1"
                  notnull="1"/>
        <property name="max_attempts"
                  type="integer"
                  notnull="1"
                  unsigned="1"/>
        <property name="mastery_score"
                  type="integer"
                  length="3"
                  unsigned="1"/>
        <property name="allow_hints"
                  type="boolean"
                  notnull="1"
                  default="1"/>
        <property name="show_score"
                  type="boolean"
                  notnull="1"
                  default="1"/>
        <property name="show_correction"
                  type="boolean"
                  notnull="1"
                  default="1"/>
        <property name="show_solution"
                  type="boolean"
                  notnull="1"
                  default="1"/>
        <property name="show_answer_feedback"
                  type="integer"
                  unsigned="1"
                  notnull="1"
                  length="1"
                  default="7"/>
        <property name="feedback_location"
                  type="integer"
                  unsigned="1"
                  notnull="1"
                  length="1"
                  default="3"/>
    </properties>
    <indexes>
        <index name="prm_id"
               type="primary">
            <property name="id"/>
        </index>
        <index name="idx_reference_id">
            <property name="reference_id"/>
        </index>
    </indexes>
</object>