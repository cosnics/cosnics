            <input type="checkbox" id="use-rubric-check" class="onoffswitch-checkbox">
            <label for="use-rubric-check" class="onoffswitch-label">
                <span class="onoffswitch-inner">
                    <span class="onoffswitch-inner-before">Gebruik rubric</span>
                    <span class="onoffswitch-inner-after">Gebruik geen rubric</span>
                </span>
                <span class="onoffswitch-switch"></span>
            </label>
        </div>-->
    </div>
</div>
<script>
    $(document).ready(function() {
        new Vue({
            el: '#build-settings',
            data: {
                use_scores: {{ USE_SCORES ? 'true' : 'false' }},
                use_feedback: {{ USE_FEEDBACK ? 'true' : 'false' }},
            },
            computed: {
                useScores: {
                    get: function() {
                        return this.use_scores;
                    },
                    set: function(value) {
                        this.use_scores = value;
                        var url = '{{ SET_USE_SCORES_URL|raw }}';
                        $.post(url, {'use_scores': value})
                            .done(function (data) {
                                console.log(data);
                            });
                    }
                },
                useFeedback: {
                    get: function() {
                        return this.use_feedback;
                    },
                    set: function(value) {
                        this.use_feedback = value;
                        var url = '{{ SET_USE_FEEDBACK_URL|raw }}';
                        $.post(url, {'use_feedback': value})
                            .done(function (data) {
                                console.log(data);
                            });
                    }
                }
            },
            methods: {
            }
        });
    });
</script>
