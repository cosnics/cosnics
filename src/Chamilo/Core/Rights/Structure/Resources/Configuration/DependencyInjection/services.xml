<?xml version="1.0" encoding="UTF-8" ?>
<container
        xmlns="http://symfony.com/schema/dic/services"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autowire="true" autoconfigure="true" public="true"/>
        <service
                id="Chamilo\Core\Rights\Structure\Service\StructureLocationConfiguration\Loader">
            <argument
                    type="service"
                    id="Chamilo\Libraries\File\Path"/>
        </service>

        <service
                id="Chamilo\Core\Rights\Structure\Service\StructureLocationService">
            <argument
                    type="service"
                    id="Chamilo\Core\Rights\Structure\Storage\Repository\StructureLocationRepository"/>
        </service>

        <service
                id="Chamilo\Core\Rights\Structure\Service\StructureLocationRoleService">
            <argument
                    type="service"
                    id="Chamilo\Core\User\Roles\Service\RoleService"/>
            <argument
                    type="service"
                    id="Chamilo\Core\Rights\Structure\Service\StructureLocationService"/>
            <argument
                    type="service"
                    id="Chamilo\Core\Rights\Structure\Storage\Repository\StructureLocationRoleRepository"/>
        </service>

        <service
                id="Chamilo\Core\Rights\Structure\Service\StructureLocationConfiguration\Synchronizer">
            <argument
                    type="service"
                    id="Chamilo\Core\Rights\Structure\Service\StructureLocationConfiguration\Loader"/>
            <argument
                    type="service"
                    id="Chamilo\Configuration\Service\RegistrationConsulter"/>
            <argument
                    type="service"
                    id="Chamilo\Core\Rights\Structure\Service\StructureLocationService"/>
            <argument
                    type="service"
                    id="Chamilo\Core\Rights\Structure\Service\StructureLocationRoleService"/>
        </service>

        <service
                id="Chamilo\Core\Rights\Structure\Service\AuthorizationChecker">
            <argument
                    type="service"
                    id="Chamilo\Core\User\Roles\Service\UserRoleService"/>
            <argument
                    type="service"
                    id="Chamilo\Core\Rights\Structure\Service\StructureLocationRoleService"/>
        </service>
    </services>
</container>