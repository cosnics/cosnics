<?xml version="1.0" encoding="UTF-8" ?>
<container
        xmlns="http://symfony.com/schema/dic/services"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true" autowire="true" />
        <service id="Chamilo\Core\API\Service\Architecture\CustomAPIKernel" autowire="false">
            <argument
                    type="service"
                    id="symfony.component.http_foundation.request"/>
            <argument
                    type="service"
                    id="chamilo.configuration.service.configuration_consulter"/>
            <argument
                    type="service"
                    id="chamilo.libraries.architecture.factory.application_factory"/>
            <argument
                    type="service"
                    id="chamilo.libraries.platform.session.session_utilities"/>
            <argument
                    type="service"
                    id="chamilo.libraries.architecture.error_handler.exception_logger"/>
            <argument
                    type="service"
                    id="Chamilo\Libraries\Authentication\AuthenticationValidator" />
            <argument>%chamilo.configuration.version%</argument>
            <argument type="service" id="Chamilo\Core\API\Service\Architecture\Routing\APIRouteMatcher"/>
            <argument
                    type="service"
                    id="chamilo.core.user.user"/>
        </service>

        <service id="Chamilo\Core\API\Service\Architecture\Routing\APIRouteMatcher" autowire="true" />
        <service id="Chamilo\Core\API\Service\Architecture\Routing\APIRoutingLoader" autowire="true" />
        <service id="Chamilo\Core\API\Service\API\APIRoutingLoaderExtension" autowire="true">
            <tag name="Chamilo\Core\API\Service\Architecture\Routing\APIRoutingLoaderExtensionInterface" />
        </service>
    </services>
</container>