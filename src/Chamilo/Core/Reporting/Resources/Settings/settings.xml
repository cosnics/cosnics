<?xml version="1.0" encoding="UTF-8"?>
<package context="Chamilo\Core\Reporting">
    <settings>
        <category name="template_style">
            <setting
                name="paper_orientation"
                field="select"
                default="Portrait">
                <options type="static">
                    <option
                        name="Portrait"
                        value="P" />
                    <option
                        name="Landscape"
                        value="L" />
                </options>
            </setting>

            <setting
                name="template_header_text_color"
                field="text"
                default="0, 0, 0">
                <validations>
                    <validation
                        rule="regex"
                        format="/^\s*\d+\s*,\s*\d+\s*,\s*\d+\s*$/"
                        message="MustBeReportingColor" />
                </validations>
            </setting>

            <setting
                name="template_header_font_family"
                field="text"
                default="Arial">
                <validations>
                    <validation
                        rule="required"
                        message="ThisFieldIsRequired" />
                </validations>
            </setting>

            <setting
                name="template_header_font_style"
                field="select"
                default="B">
                <options type="static">
                    <option
                        name="Normal"
                        value="" />
                    <option
                        name="Bold"
                        value="B" />
                    <option
                        name="Italic"
                        value="I" />
                    <option
                        name="Underline"
                        value="U" />
                </options>
            </setting>

            <setting
                name="template_header_font_size"
                field="text"
                default="11">
                <validations>
                    <validation
                        rule="numeric"
                        message="MustBeReportingFontSize" />
                </validations>
            </setting>

            <setting
                name="template_header_line_color"
                field="text"
                default="0, 0, 0">
                <validations>
                    <validation
                        rule="regex"
                        format="/^\s*\d+\s*,\s*\d+\s*,\s*\d+\s*$/"
                        message="MustBeReportingColor" />
                </validations>
            </setting>

            <setting
                name="template_footer_text_color"
                field="text"
                default="0, 0, 0">
                <validations>
                    <validation
                        rule="regex"
                        format="/^\s*\d+\s*,\s*\d+\s*,\s*\d+\s*$/"
