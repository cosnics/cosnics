                </validations>
            </setting>

            <setting
                name="template_footer_font_family"
                field="text"
                default="Arial">
                <validations>
                    <validation
                        rule="required"
                        message="ThisFieldIsRequired" />
                </validations>
            </setting>

            <setting
                name="template_footer_font_style"
                field="select"
                default="B">
                <options type="static">
                    <option
                        name="Normal"
                        value="" />
                    <option
                        name="Bold"
                        value="B" />
                    <option
                        name="Italic"
                        value="I" />
                    <option
                        name="Underline"
                        value="U" />
                </options>
            </setting>

            <setting
                name="template_footer_font_size"
                field="text"
                default="10">
                <validations>
                    <validation
                        rule="numeric"
                        message="MustBeReportingFontSize" />
                </validations>
            </setting>
        </category>

