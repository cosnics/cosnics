<?xml version="1.0" encoding="UTF-8" ?>
<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autowire="true" public="true" />

        <prototype namespace="Chamilo\Core\Queue\" resource="../../../{Service, Storage/Repository}/*"/>

        <service id="Chamilo\Core\Queue\Storage\Repository\BinLogRepository">
            <factory service="doctrine.orm.entity_manager" method="getRepository" />
            <argument>Chamilo\Core\Queue\Storage\Entity\BinLog</argument>
        </service>

        <service id="Chamlio\Core\Queue\Service\PsrContext" class="\Interop\Queue\PsrContext">
            <factory service="Chamilo\Core\Queue\Service\ConnectionFactory" method="createContext" />
        </service>

        <service id="Chamilo\Core\Queue\Service\Worker">
            <argument type="service" id="Chamlio\Core\Queue\Service\PsrContext" />
        </service>

        <service id="Chamilo\Core\Queue\Service\Producer">
            <argument type="service" id="Chamlio\Core\Queue\Service\PsrContext" />
        </service>

        <prototype namespace="Chamilo\Core\Queue\Console\Command\" resource="../../../Console/Command/*">
            <tag name="chamilo.libraries.console.command"/>
        </prototype>

    </services>
</container>