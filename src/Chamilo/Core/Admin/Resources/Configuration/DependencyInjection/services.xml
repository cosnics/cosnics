           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autowire="true" public="true"/>

        <service id="Chamilo\Core\Admin\Announcement\Service\PublicationService"/>
        <service id="Chamilo\Core\Admin\Announcement\Service\RightsService">
            <argument key="$rightsRepository" type="service"
                      id="Chamilo\Core\Admin\Announcement\Storage\Repository\RightsRepository"/>
        </service>

        <service id="Chamilo\Core\Admin\Announcement\Storage\Repository\PublicationRepository"/>
        <service id="Chamilo\Core\Admin\Announcement\Storage\Repository\RightsRepository"/>
    </services>
</container>